<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>To-Do List</h1>
    <form action="/add" method="POST">
        <input type="text" name="task" placeholder="New Task" required>
        <input type="date" name="dueDate" placeholder="Due Date">
        <button type="submit">Add</button>
    </form>
    <ul>
        <% todos.forEach(todo => { %>
            <li>
                <%= todo.task %> - <%= todo.completed ? "Completed" : "Incomplete" %>
                <% if (todo.dueDate) { %>
                    (Due: <%= new Date(todo.dueDate).toLocaleDateString() %>)
                <% } %>
                <a href="/edit/<%= todo._id %>">Edit</a>
                <form action="/complete/<%= todo._id %>" method="POST" style="display:inline;">
                    <button type="submit">Complete</button>
                </form>
                <form action="/delete/<%= todo._id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <a href="/logout">Logout</a>
</body>
</html>
